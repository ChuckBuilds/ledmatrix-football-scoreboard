{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Football Scoreboard Plugin Configuration (Nested Example)",
  "description": "Configuration schema for the Football Scoreboard plugin using nested structure for better organization",
  "type": "object",
  "properties": {
    "display_duration": {
      "type": "number",
      "default": 30,
      "minimum": 5,
      "maximum": 300,
      "description": "Duration in seconds for the display controller to show this plugin mode before rotating to next plugin"
    },
    "game_display_duration": {
      "type": "number",
      "default": 15,
      "minimum": 3,
      "maximum": 60,
      "description": "Duration in seconds to show each individual game before rotating to the next game within the same mode"
    },
    "update_interval_seconds": {
      "type": "integer",
      "default": 3600,
      "minimum": 30,
      "maximum": 86400,
      "description": "How often to fetch new data (seconds)"
    },
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable the football scoreboard plugin"
    },
    "show_records": {
      "type": "boolean",
      "default": false,
      "description": "Show team records (wins-losses) globally"
    },
    "show_ranking": {
      "type": "boolean",
      "default": false,
      "description": "Show team rankings globally"
    },
    "show_odds": {
      "type": "boolean",
      "default": false,
      "description": "Show betting odds globally"
    },
    "test_mode": {
      "type": "boolean",
      "default": false,
      "description": "Enable test mode with sample games"
    },
    "nfl": {
      "type": "object",
      "title": "NFL Settings",
      "description": "Configuration for NFL games",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable NFL games"
        },
        "favorite_teams": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of favorite NFL team abbreviations (e.g., TB, DAL, GB). Use 2-3 letter codes."
        },
        "display_modes": {
          "type": "object",
          "title": "Display Modes",
          "description": "Control which game types to show",
          "properties": {
            "show_live": {
              "type": "boolean",
              "default": true,
              "description": "Show live NFL games"
            },
            "show_recent": {
              "type": "boolean",
              "default": true,
              "description": "Show recently completed NFL games"
            },
            "show_upcoming": {
              "type": "boolean",
              "default": true,
              "description": "Show upcoming NFL games"
            }
          }
        },
        "live_priority": {
          "type": "boolean",
          "default": true,
          "description": "Give live games priority over other modes. When enabled, live games will interrupt the normal mode rotation and be displayed immediately when available."
        },
        "live_game_duration": {
          "type": "integer",
          "default": 30,
          "minimum": 10,
          "maximum": 120,
          "description": "Duration in seconds to display each live game before rotating to the next live game"
        },
        "live_update_interval": {
          "type": "integer",
          "default": 30,
          "minimum": 5,
          "maximum": 300,
          "description": "How often to update live game data (seconds)"
        },
        "game_limits": {
          "type": "object",
          "title": "Game Limits",
          "description": "Control how many games to show",
          "properties": {
            "recent_games_to_show": {
              "type": "integer",
              "default": 5,
              "minimum": 1,
              "maximum": 20,
              "description": "Maximum number of recent games to display"
            },
            "upcoming_games_to_show": {
              "type": "integer",
              "default": 1,
              "minimum": 1,
              "maximum": 20,
              "description": "Maximum number of upcoming games to display"
            }
          }
        },
        "display_options": {
          "type": "object",
          "title": "Display Options",
          "description": "Additional information to show",
          "properties": {
            "show_records": {
              "type": "boolean",
              "default": false,
              "description": "Show team records (wins-losses)"
            },
            "show_ranking": {
              "type": "boolean",
              "default": false,
              "description": "Show team rankings (when available)"
            },
            "show_odds": {
              "type": "boolean",
              "default": true,
              "description": "Show betting odds"
            }
          }
        },
        "filtering": {
          "type": "object",
          "title": "Filtering Options",
          "description": "Control which teams are shown",
          "properties": {
            "show_favorite_teams_only": {
              "type": "boolean",
              "default": true,
              "description": "Only show games from favorite teams"
            },
            "show_all_live": {
              "type": "boolean",
              "default": false,
              "description": "Show all live games, not just favorites"
            }
          }
        }
      }
    },
    "ncaa_fb": {
      "type": "object",
      "title": "NCAA Football Settings",
      "description": "Configuration for NCAA Football games",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable NCAA Football games"
        },
        "favorite_teams": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of favorite NCAA FB team abbreviations (e.g., UGA, AUB, BAMA). Use 2-4 letter codes."
        },
        "display_modes": {
          "type": "object",
          "title": "Display Modes",
          "description": "Control which game types to show",
          "properties": {
            "show_live": {
              "type": "boolean",
              "default": true,
              "description": "Show live NCAA FB games"
            },
            "show_recent": {
              "type": "boolean",
              "default": true,
              "description": "Show recently completed NCAA FB games"
            },
            "show_upcoming": {
              "type": "boolean",
              "default": true,
              "description": "Show upcoming NCAA FB games"
            }
          }
        },
        "live_priority": {
          "type": "boolean",
          "default": true,
          "description": "Give live games priority over other modes. When enabled, live games will interrupt the normal mode rotation and be displayed immediately when available."
        },
        "live_game_duration": {
          "type": "integer",
          "default": 20,
          "minimum": 10,
          "maximum": 120,
          "description": "Duration in seconds to display each live game before rotating to the next live game"
        },
        "live_update_interval": {
          "type": "integer",
          "default": 30,
          "minimum": 5,
          "maximum": 300,
          "description": "How often to update live game data (seconds)"
        },
        "game_limits": {
          "type": "object",
          "title": "Game Limits",
          "description": "Control how many games to show",
          "properties": {
            "recent_games_to_show": {
              "type": "integer",
              "default": 1,
              "minimum": 1,
              "maximum": 20,
              "description": "Maximum number of recent games to display"
            },
            "upcoming_games_to_show": {
              "type": "integer",
              "default": 1,
              "minimum": 1,
              "maximum": 20,
              "description": "Maximum number of upcoming games to display"
            }
          }
        },
        "display_options": {
          "type": "object",
          "title": "Display Options",
          "description": "Additional information to show",
          "properties": {
            "show_records": {
              "type": "boolean",
              "default": false,
              "description": "Show team records (wins-losses)"
            },
            "show_ranking": {
              "type": "boolean",
              "default": true,
              "description": "Show team rankings (rankings are very important in college football)"
            },
            "show_odds": {
              "type": "boolean",
              "default": true,
              "description": "Show betting odds"
            }
          }
        },
        "filtering": {
          "type": "object",
          "title": "Filtering Options",
          "description": "Control which teams are shown",
          "properties": {
            "show_favorite_teams_only": {
              "type": "boolean",
              "default": true,
              "description": "Only show games from favorite teams"
            },
            "show_all_live": {
              "type": "boolean",
              "default": false,
              "description": "Show all live games, not just favorites"
            }
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "required": []
}

