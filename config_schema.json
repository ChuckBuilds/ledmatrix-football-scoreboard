          },
          "font_size": {
            "type": "integer",
            "title": "Font Size",
            "description": "Font size in pixels",
            "minimum": 4,
            "maximum": 16,
            "default": 8
          }
        },
        "x-propertyOrder": ["font", "font_size"],
        "additionalProperties": false
      },
      "team_name": {
