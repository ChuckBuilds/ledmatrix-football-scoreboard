{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Football Scoreboard Plugin Configuration",
  "description": "Configuration schema for the Football Scoreboard plugin",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable or disable the football scoreboard plugin"
    },
    "display_duration": {
      "type": "number",
      "default": 15,
      "minimum": 5,
      "maximum": 60,
      "description": "Duration in seconds to display each game"
    },
    "show_records": {
      "type": "boolean",
      "default": false,
      "description": "Show team records (wins-losses)"
    },
    "show_ranking": {
      "type": "boolean",
      "default": false,
      "description": "Show team rankings (when available)"
    },
    "live_priority": {
      "type": "boolean",
      "default": true,
      "description": "Prioritize live games over scheduled games"
    },
    "live_game_duration": {
      "type": "number",
      "default": 30,
      "minimum": 10,
      "maximum": 120,
      "description": "Duration in seconds to display live games"
    },
    "show_odds": {
      "type": "boolean",
      "default": true,
      "description": "Show betting odds for games"
    },
    "test_mode": {
      "type": "boolean",
      "default": false,
      "description": "Enable test mode for development"
    },
    "update_interval_seconds": {
      "type": "integer",
      "default": 3600,
      "minimum": 30,
      "maximum": 86400,
      "description": "How often to fetch new data (seconds)"
    },
    "live_update_interval": {
      "type": "integer",
      "default": 30,
      "minimum": 10,
      "maximum": 300,
      "description": "Update interval for live games (seconds)"
    },
    "live_odds_update_interval": {
      "type": "integer",
      "default": 3600,
      "minimum": 60,
      "maximum": 86400,
      "description": "Update interval for live odds (seconds)"
    },
    "odds_update_interval": {
      "type": "integer",
      "default": 3600,
      "minimum": 60,
      "maximum": 86400,
      "description": "Update interval for odds data (seconds)"
    },
    "recent_update_interval": {
      "type": "integer",
      "default": 3600,
      "minimum": 60,
      "maximum": 86400,
      "description": "Update interval for recent games (seconds)"
    },
    "upcoming_update_interval": {
      "type": "integer",
      "default": 3600,
      "minimum": 60,
      "maximum": 86400,
      "description": "Update interval for upcoming games (seconds)"
    },
    "show_favorite_teams_only": {
      "type": "boolean",
      "default": true,
      "description": "Only show games from favorite teams"
    },
    "logo_dir": {
      "type": "string",
      "default": "assets/sports/nfl_logos",
      "description": "Directory path for team logos"
    },
    "show_all_live": {
      "type": "boolean",
      "default": false,
      "description": "Show all live games, not just favorites"
    },
    "nfl": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable NFL games"
        },
        "favorite_teams": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{2,3}$",
            "description": "NFL team abbreviation (e.g., TB, DAL)"
          },
          "uniqueItems": true,
          "maxItems": 32,
          "description": "List of favorite NFL team abbreviations (e.g., TB, DAL, GB)"
        },
        "display_modes": {
          "type": "object",
          "properties": {
            "live": {
              "type": "boolean",
              "default": true,
              "description": "Show live NFL games"
            },
            "recent": {
              "type": "boolean",
              "default": true,
              "description": "Show recently completed NFL games"
            },
            "upcoming": {
              "type": "boolean",
              "default": true,
              "description": "Show upcoming NFL games"
            }
          },
          "additionalProperties": false
        },
        "recent_games_to_show": {
          "type": "integer",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of recent NFL games to display"
        },
        "upcoming_games_to_show": {
          "type": "integer",
          "default": 1,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of upcoming NFL games to display"
        },
        "background_service": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable background service for data fetching"
            },
            "max_workers": {
              "type": "integer",
              "default": 3,
              "minimum": 1,
              "maximum": 10,
              "description": "Maximum number of worker threads"
            },
            "request_timeout": {
              "type": "integer",
              "default": 30,
              "minimum": 5,
              "maximum": 120,
              "description": "Request timeout in seconds"
            },
            "max_retries": {
              "type": "integer",
              "default": 3,
              "minimum": 1,
              "maximum": 10,
              "description": "Maximum number of retries for failed requests"
            },
            "priority": {
              "type": "integer",
              "default": 2,
              "minimum": 1,
              "maximum": 5,
              "description": "Background service priority"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "ncaa_fb": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable NCAA Football games"
        },
        "live_priority": {
          "type": "boolean",
          "default": true,
          "description": "Prioritize live games over scheduled games"
        },
        "live_game_duration": {
          "type": "number",
          "default": 20,
          "minimum": 10,
          "maximum": 120,
          "description": "Duration in seconds to display live games"
        },
        "show_odds": {
          "type": "boolean",
          "default": true,
          "description": "Show betting odds for games"
        },
        "test_mode": {
          "type": "boolean",
          "default": false,
          "description": "Enable test mode for development"
        },
        "update_interval_seconds": {
          "type": "integer",
          "default": 3600,
          "minimum": 30,
          "maximum": 86400,
          "description": "How often to fetch new data (seconds)"
        },
        "live_update_interval": {
          "type": "integer",
          "default": 30,
          "minimum": 10,
          "maximum": 300,
          "description": "Update interval for live games (seconds)"
        },
        "live_odds_update_interval": {
          "type": "integer",
          "default": 3600,
          "minimum": 60,
          "maximum": 86400,
          "description": "Update interval for live odds (seconds)"
        },
        "odds_update_interval": {
          "type": "integer",
          "default": 3600,
          "minimum": 60,
          "maximum": 86400,
          "description": "Update interval for odds data (seconds)"
        },
        "season_cache_duration_seconds": {
          "type": "integer",
          "default": 86400,
          "minimum": 3600,
          "maximum": 604800,
          "description": "How long to cache season data (seconds)"
        },
        "recent_games_to_show": {
          "type": "integer",
          "default": 1,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of recent NCAA FB games to display"
        },
        "upcoming_games_to_show": {
          "type": "integer",
          "default": 1,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of upcoming NCAA FB games to display"
        },
        "show_favorite_teams_only": {
          "type": "boolean",
          "default": true,
          "description": "Only show games from favorite teams"
        },
        "logo_dir": {
          "type": "string",
          "default": "assets/sports/ncaa_logos",
          "description": "Directory path for team logos"
        },
        "show_all_live": {
          "type": "boolean",
          "default": false,
          "description": "Show all live games, not just favorites"
        },
        "favorite_teams": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{2,3}$",
            "description": "NCAA FB team abbreviation (e.g., UGA, AUB)"
          },
          "uniqueItems": true,
          "maxItems": 130,
          "description": "List of favorite NCAA FB team abbreviations (e.g., UGA, AUB, BAMA)"
        },
        "display_modes": {
          "type": "object",
          "properties": {
            "live": {
              "type": "boolean",
              "default": true,
              "description": "Show live NCAA FB games"
            },
            "recent": {
              "type": "boolean",
              "default": true,
              "description": "Show recently completed NCAA FB games"
            },
            "upcoming": {
              "type": "boolean",
              "default": true,
              "description": "Show upcoming NCAA FB games"
            }
          },
          "additionalProperties": false
        },
        "background_service": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable background service for data fetching"
            },
            "max_workers": {
              "type": "integer",
              "default": 3,
              "minimum": 1,
              "maximum": 10,
              "description": "Maximum number of worker threads"
            },
            "request_timeout": {
              "type": "integer",
              "default": 30,
              "minimum": 5,
              "maximum": 120,
              "description": "Request timeout in seconds"
            },
            "max_retries": {
              "type": "integer",
              "default": 3,
              "minimum": 1,
              "maximum": 10,
              "description": "Maximum number of retries for failed requests"
            },
            "priority": {
              "type": "integer",
              "default": 2,
              "minimum": 1,
              "maximum": 5,
              "description": "Background service priority"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["enabled"]
}
